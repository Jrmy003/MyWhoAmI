<Application
    x:Class="WhoAmI.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:WhoAmI.UWP.viewmodels"
    xmlns:local="using:WhoAmI.UWP"
    RequestedTheme="Light">
    <Application.Resources>
        <vm:ViewModelLocator
        x:Key="ViewModelLocator"/>
        <!-- Styles -->
        <Style x:Key="WhiteSmokeButton" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="26px"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" >
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                        <GradientStop Color="Gray" Offset="0.2"/>
                        <GradientStop Color="WhiteSmoke" Offset="0.85"/>
                        <GradientStop Color="Gray" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>

</Application>
